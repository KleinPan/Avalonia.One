<UserControl x:Class="One.Toolbox.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vmMain="using:One.Toolbox.ViewModels.MainWindow"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="vmMain:MainWindowVM"
             mc:Ignorable="d">
    <Design.DataContext>

        <vmMain:MainWindowVM />
    </Design.DataContext>
    <Grid ColumnDefinitions="50,*">
        <ListBox ItemsSource="{Binding NavigationItems}" SelectedItem="{Binding CurrentMenuItem}">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="vmMain:MainMenuItemVM">
                    <Grid Height="40">

                        <PathIcon Width="20" Data="{Binding Icon}" ToolTip.Tip="{Binding Header}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ContentControl Grid.Column="1" Content="{Binding CurrentMenuItem.Content}" />
    </Grid>
</UserControl>