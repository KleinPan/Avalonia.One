<UserControl x:Class="One.Toolbox.Views.BingImage.BingImagePage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:One.Toolbox.ViewModels.BingImage"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Design.DataContext>
        <vm:BingImagePageVM />
    </Design.DataContext>
    <Grid>
        <ListBox ItemsSource="{Binding ObImageListInfo}">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="vm:UsefullImageInfoVM">
                    <Grid RowDefinitions="auto,*,auto">
                        <TextBlock Text="{Binding Title}" />
                        <Border Grid.Row="1" CornerRadius="4,4,0,0">
                            <Image Height="200" Source="{Binding ImageAvalonia}" />
                        </Border>
                        <TextBlock Grid.Row="2" Text="{Binding Copyright}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>