<Window x:Class="One.Toolbox.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:One.Toolbox.Views"
        xmlns:vm="using:One.Toolbox.ViewModels"
        Title="One.Toolbox"
        Width="800"
        Height="600"
        d:DesignHeight="450"
        d:DesignWidth="800"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        ExtendClientAreaToDecorationsHint="True"
        Icon="/Assets/avalonia-logo.ico"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Border BorderBrush="Gray" BorderThickness="1">
        <Grid RowDefinitions="auto,*">
            <views:WindowsTitleBar Title="{Binding $parent[Window].Title}" Icon="/Assets/avalonia-logo.ico" />
            <views:MainView Grid.Row="1" />
        </Grid>
    </Border>
</Window>